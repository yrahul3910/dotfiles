{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "autoupdate": true,
  "model": "anthropic/claude-sonnet-4-5",
  "small_model": "anthropic/claude-haiku-4-5",
  "share": "manual",
  "command": {
    "rusthelp": {
      "template": "Run `cargo build` and help me fix the errors, explaining what you're doing before you do it.",
      "description": "Help fix Rust compilation errors",
      "agent": "build",
      "model": "anthropic/claude-sonnet-4-5",
    }
  },
  "permission": {
    "edit": "ask",
    "bash": "ask",
    "skill": "ask",
    "webfetch": "ask",
    "doom_loop": "ask",
    "external_directory": "ask"
  },
  "mcp": {
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "linear": {
      "type": "remote",
      "url": "https://mcp.linear.app/mcp",
      "headers": {
        "Authorization": "Bearer {env:LINEAR_API_KEY}"
      },
      "enabled": true
    }
  }
}
