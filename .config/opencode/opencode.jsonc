{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "autoupdate": true,
  "model": "openrouter/claude-sonnet-4-5",
  "small_model": "anthropic/claude-haiku-4-5",
  "share": "manual",
  "command": {
    "rusthelp": {
      "template": "Run `cargo build` and help me fix the errors, explaining what you're doing before you do it.",
      "description": "Help fix Rust compilation errors",
      "agent": "build",
      "model": "anthropic/claude-sonnet-4-5",
    }
  },
  "permission": {
    "edit": "ask",
    "bash": "ask",
    "skill": "ask",
    "webfetch": "ask",
    "doom_loop": "ask",
    "external_directory": "ask",
    "lsp": "allow"
  },
  "mcp": {
    "linear": {
      "type": "local",
      "command": ["bunx", "-y", "mcp-remote", "https://mcp.linear.app/mcp"],
      "enabled": true
    }
  },
  "keybinds": {
    "leader": "ctrl+x",
    "session_export": "<leader>x",
    "session_new": "<leader>n",
    "session_list": "<leader>l",
    "session_share": "<leader>s",
    "session_unshare": "<leader>S",
    "session_compact": "<leader>c",
    "messages_page_up": "ctrl+b",
    "messages_page_down": "ctrl+f",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "model_list": "<leader>m"
  }
}
